@model IEnumerable<quyettien.Models.Product>

<div class="wrap-slick2">
    <div class="slick2">
        @foreach (var item in Model)
        {
            <div class="item-slick2 p-l-15 p-r-15">
            <!-- Block2 -->
            <div class="block2">
                <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                    <img src="@Url.Action("GetImage", new { id = item.ID })" alt="@item.ProductName" style="height: 160px; width: 120px">

                    <div class="block2-overlay trans-0-4">

                        <div class="block2-btn-addcart w-size1 trans-0-4">
                            <!-- Button -->

                            <a href="@Url.Action("Chi_Tiet", new { id=item.ID })" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                Chi tiết
                            </a>
                        </div>
                    </div>
                </div>

                <div class="block2-txt p-t-20">
                    <a href="@Url.Action("Chi_Tiet", new { id=item.ID })" class="block2-name dis-block s-text3 p-b-5">
                        @item.ProductName
                    </a>

                    <span class="block2-price m-text6 p-r-5">
                        @item.SalePrice.ToString("N0") ₫
                    </span>
                </div>
            </div>
        </div>
        }
        


    </div>
</div>